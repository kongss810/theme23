    },
    {
      "type": "textarea",
      "id": "svg_icon3",
      "label": "SVG Icon 3"
    },
    {
      "type": "textarea",
      "id": "svg_icon4",
      "label": "SVG Icon 4"
    },
    {
      "type": "textarea",
      "id": "svg_icon5",
      "label": "SVG Icon 5"
    },
    {
      "type": "textarea",
      "id": "svg_icon6",
      "label": "SVG Icon 6"
    },
    {
      "type": "textarea",
      "id": "svg_icon7",
      "label": "SVG Icon 7"
    },
    {
      "type": "textarea",
      "id": "svg_icon8",
      "label": "SVG Icon 8"
    },
    {
      "type": "textarea",
      "id": "svg_icon9",
      "label": "SVG Icon 9"
    },

    {
      "type": "color",
      "id": "footer_background",
      "label": "Background",
      "default": "#f3f5f6"
    },
    {
      "type": "color",
      "id": "footer_text_color",
      "label": "Text",
      "default": "#677279"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "300 x 300px .png recommended"
        },
        {
          "type": "range",
          "id": "image_width",
          "min": 50,
          "max": 300,
          "step": 10,
          "unit": "px",
          "label": "Image width",
          "default": 150
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "text",
          "default": "<p>Use this text area to tell your customers about your brand and vision. You can change it in the theme editor.</p>"
        },
        {
          "type": "checkbox",
          "id": "social_icons",
          "label": "social icons",
          "default": true
        }
      ]
    },

    {
      "type": "links",
      "name": "Links",
      "settings": [
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "info": "This menu won't show dropdown items.",
          "default": "footer"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "links",
        "settings": {}
      }
    ]
  }
}
