     .section_Index7Right {
        width: 49%;
        height: max-content;
        max-width: 740px;
    }
    .section_Index7Left_BoxImg {
        --blur-radius: 10px;
        --x-offset: 4px;
        --y-offset: 4px;
        --color: rgba(0, 0, 0, 0.25);
        filter: drop-shadow(var(--x-offset) var(--y-offset) var(--blur-radius) var(--color));
