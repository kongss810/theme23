        justify-content: center;
        align-items: center;
    }
    .section_Index7Right_buttonBox {
        min-width: max-content;
        height: 37px;
        display: flex;
        width: max-content;
        justify-content: center;
        padding: 0 16px;
        color: #fff;
        background: linear-gradient(180deg, #0091DA 34.44%, #003C86 110.81%);
        align-items: center;
    }
  }
