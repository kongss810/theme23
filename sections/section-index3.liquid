    observer: true,
    observeParents: true,
    breakpoints: {
      300: {
        slidesPerView: 2,
        spaceBetween: 20,
      },
      720: {
        slidesPerView: 3.4,
        spaceBetween: 20,
      },
      1000: {
        slidesPerView: 4.4,
        spaceBetween: 20,
