<style>
  #shopify-section-{{section.id}} .section_Index3All{
      margin-top: {{section.settings.Desktop_top}}px;
      margin-bottom: {{section.settings.Desktop_bottom}}px;

      padding-top:{{section.settings.Desktop_paddingTop}}px;
      padding-bottom:{{section.settings.Desktop_paddingBottom}}px;
  }
  @media(max-width:999px) {
      #shopify-section-{{section.id}} .section_Index3All{
          margin-top: {{section.settings.Mobile_top}}px;
          margin-bottom: {{section.settings.Mobile_bottom}}px;

          padding-top:{{section.settings.Mobile_paddingTop}}px;
          padding-bottom:{{section.settings.Mobile_paddingBottom}}px;
      }
  }
  .section_Index3Box {
      position: relative;
      display: flex;
  }
  .section_Index3Box .section_button1 {
      display: flex;
      flex-direction: column;


  }
  .section_Index3_text {
      text-align: center;
      padding: 38px 12px 20px;
  }
  .section_Index3_img {
      display: flex;
      flex: 1;
  }
  .section_Index3_img img {
      width: 100%;
      object-fit: contain;
      height: 100%;
  }
  .section_Index3Box,.section_Index3Box .section_button1 {
    width: 100%;
  }
  @media (min-width: 1000px) {
        .section_Index3_title {
            text-align: center;
            margin-bottom: 40px;
        }
        .section_Index3_box {
            display: grid;
            grid-template-columns: repeat(3,1fr);
            gap: 22px;
            row-gap: 0;
        }
        .section_Index3Left,.section_Index3Banner,.section_Index3Right {
            display: grid;
            row-gap: 20px;
        }
        .section_Index3Box {
            --blur-radius: 10px;
            --x-offset: 4px;
            --y-offset: 4px;
            --color: rgba(0, 0, 0, 0.25);
            filter: drop-shadow(var(--x-offset) var(--y-offset) var(--blur-radius) var(--color));
        }
        .section_Index3Box:hover {
            --blur-radius: 10px;
            --x-offset: 2px;
            --y-offset: -2px;
            --color: #dab736ad;
            filter: drop-shadow(var(--x-offset) var(--y-offset) var(--blur-radius) var(--color));
        }
        .section_Index3Box:hover .section_button1 {
            border-color: #DAB736;
        }
        .section_Index3Box:hover .corner-tl,.section_Index3Box:hover .corner-br  {
            background-color: #DAB736;
        }
        .section_Index3Box:hover .dis1, .section_Index3Box:hover .dis2 {
            background-color: #DAB736;
        }
  }
  @media (max-width:999px) {
    .section_Index3_title {
      text-align: center;
    }
    .section_Index3_box {
      margin: 30px -2px 0;
    }
    .section_Index3_text {
      padding: 32px 12px 15px;
    }
    .index3Swiper .swiper-pagination{
        position: unset;
        width: auto;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 32px;
    }
    .index3Swiper {
      padding: 2px;
    }
    .index3Swiper .swiper-pagination-bullet{
        opacity: 1;
        background: #fff;
        border-radius: 10px;
    }
    .index3Swiper .swiper-pagination span{
        background: rgba(255, 255, 255, 0.5);
    }

    .index3Swiper .swiper-pagination-bullet {
        opacity: 1;
        position: relative;
        margin: 0 3px !important;
        width: 8px;
        height: 2px !important;
        overflow: hidden;
        transition: all .3s;
        border-radius: 2px;
    }

    .index3Swiper .swiper-pagination-bullet.swiper-pagination-bullet-active{
        width: 20px;
        border-radius: 10px;
        background-color: #fff;
    }
  }
</style>
